{
  "manifest_version": 3,
  "name": "WebSocket DevTool",
  "version": "1.0.0",
  "description": "WebSocket DevTool tool for monitoring, intercepting, and modifying WebSocket messages",

  "permissions": ["debugger", "activeTab", "scripting", "storage"],

  "host_permissions": ["http://*/*", "https://*/*"],

  "background": {
    "service_worker": "src/background/background.js"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["src/content/content.js"],
      "run_at": "document_start"
    }
  ],

  "devtools_page": "src/devtools/devtools.html",

  "web_accessible_resources": [
    {
      "resources": ["src/content/injected.js", "locales/*.json"],
      "matches": ["http://*/*", "https://*/*"]
    }
  ],

  "action": {
    "default_title": "WebSocket DevTool",
    "default_popup": "src/popup/popup.html"
  }
}
